# Example Terraform Variables Configuration
# Copy this file to terraform.tfvars and customize as needed

# AWS Region (change as needed)
aws_region = "us-east-1"

# Environment
environment = "dev"

# Instance types for Image Builder (can use multiple for testing)
instance_types = ["t3.medium"]

# Project name
project_name = "web-server-imagebuilder"

# Parent image ARN - Amazon Linux 2023
# Using a specific version for better reliability
# To find the latest ARN, use list-parent-images.ps1 or scripts/Fix-ParentImageARN.ps1
# These are some known working Amazon Linux 2023 ARNs (as of June 2025)
parent_image = "arn:aws:imagebuilder:us-east-1:aws:image/amazon-linux-2023-x86/2023.3.20240306"
# Alternative options if the above doesn't work:
# parent_image = "arn:aws:imagebuilder:us-east-1:aws:image/amazon-linux-2023-x86/2023.2.20231218"
# parent_image = "arn:aws:imagebuilder:us-east-1:aws:image/amazon-linux-2023-x86/2023.1.20230906"
# parent_image = "arn:aws:imagebuilder:us-east-1:aws:image/amazon-linux-2-x86/2023.3.20240611"

# Optional: Uncomment and set if you want SSH access to launched instances
# key_pair_name = "my-key-pair"

# Optional: Uncomment to enable Auto Scaling Group
# create_auto_scaling = true
# asg_min_size = 1
# asg_max_size = 3
# asg_desired_capacity = 2

# Optional: Uncomment if using with load balancer
# target_group_arns = ["arn:aws:elasticloadbalancing:region:account:targetgroup/my-targets/1234567890123456"]
